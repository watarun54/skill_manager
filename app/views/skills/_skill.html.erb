<tr id="skill-<%= skill.id %>">
  <th scope="row"><%= skill.name %></th>
  <td><%= link_to(skill.general_skill.name, general_skill_path(skill.general_skill), style: "color:#343a40;") %></td>
  <td><%= skill.cards.count %></td>
  <td><%= total_scores_of(skill) %></td>
  <td><%= skill.created_at.strftime("%Y/%m/%d") %></td>
  <td>
    <div class="btn-group">
      <%= link_to(edit_skill_path(skill), remote: true, class: "btn btn-sm btn-outline-secondary") do %>
        <%= icon("fas", "edit") %>
      <% end %>
      <%= link_to skill, method: :delete, remote: true, data: { confirm: 'Are you sure?'}, class: "btn btn-sm btn-outline-secondary" do %>
        <%= icon("fas", "trash") %>
      <% end %>
    </div>
  </td>
</tr>
