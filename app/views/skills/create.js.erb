$('#alert-message').empty();
$('.error-message-area').empty();
<% if @status == 'success' %>
$('#alert-message').html('\
    <div class="alert alert-success alert-dismissible fade show" role="alert" role="alert">\
      <strong>create <%= @status %></strong>\
      <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">\
        <span aria-hidden="true">&times;</span>\
      </button>\
    </div>\
  ');
$("#skill-list").prepend("<%= j(render("skill", skill: @skill)) %>");
$("#skill_name").val("");
<% elsif @status == 'fail' %>
$('.error-message-area').html('<%= j render("shared/error_messages", model: @skill) %>');
<% end %>
