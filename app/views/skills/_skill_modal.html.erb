<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">

    <div class="modal-header">
      <h5 class="modal-title" id="label1">
        Edit Skill
      </h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= form_for(@skill, remote: true) do |f| %>
      <div class="modal-body">
        <div class="error-message-area"></div>

        <div class="form row px-3">
          <%= f.text_field :name, class: "form-control col-md-6 mb-3", placeholder: "Skill Name", maxlength: 50 %>
          <%= f.select :general_skill_id, @general_skill_options, {}, { class: "form-control col-md-6" } %>
        </div>
      </div>

      <div class="modal-footer">
        <%= f.submit "Save", class: "btn btn-secondary"%>
      </div>
    <% end %>

  </div>
</div>
