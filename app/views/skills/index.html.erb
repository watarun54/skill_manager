<div class="container-fluid">
	<div class="row">
		<%= render "shared/sidebar" %>

		<main role="main" class="col-md-9 col-lg-10 py-4 px-3 p-lg-5">
      <div id="alert-message"></div>

      <div class="modal fade" id="skill-modal" tabindex="-1" role="dialog" aria-labelledby="label1" aria-hidden="true"></div>

      <%= form_for(@skill, remote: true) do |f| %>
      <div class="form-row">
        <div class="col-md-5 input-group mb-4">
          <%= f.text_field :name, class: "form-control", placeholder: "New Skill", maxlength: 50 %>
          <%= f.select :general_skill_id, @general_skill_options, {}, { class: "form-control" } %>
          <div class="input-group-append">
            <%= f.submit "Add", class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
      <% end %>

      <div class="error-message-area"></div>

      <div class="table-responsive">
      <table class="table table-hover text-nowrap">
        <thead class="thead-dark">
          <tr>
            <th scope="col" class="font-weight-normal">Skill</th>
            <th scope="col" class="font-weight-normal">General Skill</th>
            <th scope="col" class="font-weight-normal">Card数</th>
            <th scope="col" class="font-weight-normal">総スコア</th>
            <th scope="col" class="font-weight-normal">作成日</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="skill-list">
        <% @skills.each do |skill| %>
          <tr id="skill-<%= skill.id %>">
            <th scope="row"><%= skill.name %></th>
            <td><%= link_to(skill.general_skill.name, general_skill_path(skill.general_skill), style: "color:#343a40;") %></td>
            <td><%= skill.cards.count %></td>
            <td><%= total_scores_of(skill) %></td>
            <td><%= skill.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <div class="btn-group ml-3">
                <%= link_to 'Edit', edit_skill_path(skill), remote: true, class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to 'Delete', skill, method: :delete, remote: true, data: { confirm: 'Are you sure?'}, class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>

		</main>
	</div>
</div>
