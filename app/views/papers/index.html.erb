<div class="container-fluid">
	<div class="row">
		<%= render "shared/sidebar" %>

		<main role="main" class="col-md-9 col-lg-10 py-4 px-3 p-lg-5">
      <div id="alert-message"></div>

      <div class="modal fade" id="paper-modal" tabindex="-1" role="dialog" aria-labelledby="label1" aria-hidden="true"></div>

      <%= form_for(@paper, remote: true) do |f| %>
      <div class="form-row">
        <div class="col-md-5 input-group mb-4">
          <%= f.text_field :url, class: "form-control", placeholder: "URL", maxlength: 300 %>
          <div class="input-group-append">
            <%= f.submit "Add", class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
      <% end %>

      <div class="error-message-area"></div>

      <div id="paper-table" class="table-responsive">
      <table class="table table-bordered table-sm">
        <thead class="thead-light">
          <tr>
            <th scope="col" class="text-center">Title</th>
            <th scope="col" class="text-center">URL</th>
            <th scope="col" class="text-center">Status</th>
            <th scope="col" class="text-center">G.S.</th>
            <th scope="col" class="text-center">Memo</th>
            <th scope="col" class="text-center">作成日</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody id="paper-list">
        <% @papers.each do |paper| %>
          <tr id="paper-<%= paper.id %>">
            <th scope="row" class="align-middle"><%= paper.title.nil? ? ".... タイトル取得中 ...." : paper.title %></th>
            <td class="text-center align-middle"><%= link_to("link", paper.url, target: "_blank") %></td>
            <td class="text-center align-middle"><%= paper.status_text %></td>
            <td class="text-center align-middle"><%= paper.general_skill.try(:name).try(:truncate, 8) %></td>
            <td class="text-center align-middle"><%= paper.content %></td>
            <td class="text-center align-middle"><%= paper.created_at.strftime("%Y/%m/%d") %></td>
            <td class="text-center align-middle">
              <div class="btn-group">
                <%= link_to 'Edit', edit_paper_path(paper), remote: true, class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to 'Delete', paper, method: :delete, remote: true, data: { confirm: 'Are you sure?'}, class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>

		</main>
	</div>
</div>
