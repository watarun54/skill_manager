<div class="container-fluid">
	<div class="row">
		<%= render "shared/sidebar" %>

		<main role="main" class="col-md-9 col-lg-10 py-4 px-3 p-lg-5">
      <div id="alert-message"></div>

      <div class="modal fade" id="paper-modal" tabindex="-1" role="dialog" aria-labelledby="label1" aria-hidden="true"></div>

      <%= form_for(@paper, remote: true) do |f| %>
      <div class="form-row">
        <div class="col-md-5 input-group mb-4">
          <%= f.text_field :url, class: "form-control", placeholder: "URL", maxlength: 500 %>
          <div class="input-group-append">
            <%= f.submit "Add", class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
      <% end %>

      <div class="error-message-area"></div>

      <div id="paper-table" class="table-responsive">
      <table class="table table-bordered table-sm">
        <thead class="thead-dark">
          <tr>
            <th scope="col" colspan="2" class="pl-3 font-weight-normal">Title</th>
            <th scope="col" class="text-center font-weight-normal">Status</th>
            <th scope="col" class="text-center font-weight-normal">G.S.</th>
            <th scope="col" class="text-center font-weight-normal">作成日</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody id="paper-list">
        <% @papers.each do |paper| %>
          <tr id="paper-<%= paper.id %>">
            <th scope="row" class="align-middle"><%= paper.title.nil? ? ".... タイトル取得中 ...." : link_to(paper.title, paper.url, style: "color:#343a40;", target: "_blank") %></th>
            <td class="text-center align-middle" data-toggle="collapse" data-target="#accordion<%= paper.id %>" style="padding:13px;">
              <%= paper.content.blank? ? "-" : "▼" %>
            </td>
            <td class="text-center align-middle"><%= paper.status_text %></td>
            <td class="text-center align-middle"><%= paper.general_skill.try(:name).try(:truncate, 8) %></td>
            <td class="text-center align-middle"><%= paper.created_at.strftime("%Y/%m/%d") %></td>
            <td class="text-center align-middle">
              <div class="btn-group">
                <%= link_to 'Edit', edit_paper_path(paper), remote: true, class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to 'Delete', paper, method: :delete, remote: true, data: { confirm: 'Are you sure?'}, class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </td>
          </tr>
          <tr id="paper-<%= paper.id %>-memo">
            <td colspan="6" class="bg-light" style="padding:0px;border:none;">
            <% unless paper.content.blank? %>
              <div id="accordion<%= paper.id %>" class="collapse p-1">
                <%= paper.content %>
              </div>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>
      <%= paginate @papers, theme: 'twitter-bootstrap-4',
                            pagination_class: "pagination-sm justify-content-center",
                            nav_class: "d-inline-b",
                            window: 1 %>

		</main>
	</div>
</div>
