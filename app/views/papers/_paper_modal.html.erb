<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">

    <div class="modal-header">
      <h5 class="modal-title" id="label1">
        Edit Paper
      </h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= form_for(@paper, remote: true) do |f| %>
      <div class="modal-body">
        <div class="error-message-area"></div>

        <div class="form-group">
          <%= f.text_field :url, class: "form-control", maxlength: 300, placeholder: "URL" %>
        </div>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control", maxlength: 200, placeholder: "Title" %>
        </div>
        <div class="form-group">
          <%= f.select :status, @paper_status_options, {}, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.select :general_skill_id, @general_skill_options, {}, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.text_area :content, class: "form-control", maxlength: 500, placeholder: "Memo" %>
        </div>
      </div>

      <div class="modal-footer">
        <%= f.submit "Save", class: "btn btn-secondary"%>
      </div>
    <% end %>

  </div>
</div>
