$('#alert-message').empty();
$('.error-message-area').empty();
<% if @status == 'success' %>
$('#alert-message').html('\
    <div class="alert alert-success alert-dismissible fade show" role="alert" role="alert">\
      <strong>update <%= @status %></strong>\
      <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">\
        <span aria-hidden="true">&times;</span>\
      </button>\
    </div>\
  ');
$("#paper-<%= @paper.id %>").replaceWith("<%= j(render("paper", paper: @paper)) %>");
$("#paper-modal").modal("hide");
<% elsif @status == 'fail' %>
$('.error-message-area').html('<%= j render("shared/error_messages", model: @paper) %>');
<% end %>
