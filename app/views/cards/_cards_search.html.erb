<div id="cards-search-form" class="row">
  <div class="col-md-6 offset-md-6 mb-3">
    <%= form_with url: cards_search_path, method: :get do |f| %>
    <div class="form-inline">
      <div class="input-group ml-auto">
        <%= f.select :general_skill, options_for_select(general_skill_options.unshift(["All", nil]), general_skill_param), {}, { class: "form-control mr-1", onChange: "javascript: this.form.cards_search_submit.click();" } %>
        <%= f.select :skill, options_for_select(general_skill_param.blank? ? [["G.S.を選択してください", nil]] : skill_options_hash[general_skill_param], skill_param), {}, { class: "form-control", onChange: "javascript: this.form.cards_search_submit.click();" } %>
        <%= f.submit name: "cards_search_submit", class: "d-none" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-md-6 offset-md-6 mb-3 text-right">
    <span id="total-cards-count" class="mr-2"><%= cards.total_count %> 件</span>
  </div>
</div>
