$("#le-<%= @le.id %> .le-title").css("display","none");
$("#le-<%= @le.id %>").prepend("<%= j(render "edit_le_title", le: @le) %>");
var title = $(".le-title input").val().trim();
$(".le-title input").val("");
$(".le-title input").focus()
$(".le-title input").val(title).blur(function(){
  if($(".le-title input").val().trim() == "" || $(".le-title input").val().trim() === "<%= @le.name %>"){
    $("#le-<%= @le.id %> .le-title").css("display","");
    $("#le-<%= @le.id %> > form").remove();
  } else {
    $("#le-edit-submit").click();
  }
});
$(".le-title input").keypress(function(e){
  if(e.which == 13){
    if($(".le-title input").val().trim() == "" || $(".le-title input").val().trim() === "<%= @le.name %>"){
      $("#le-<%= @le.id %> .le-title").css("display","");
      $("#le-<%= @le.id %> > form").remove();
    }
  }
});
