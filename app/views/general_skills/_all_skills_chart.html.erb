<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-5 mr-md-5 border-bottom">
  <h2 class="h2"><%= @general_skill.name.truncate(15) %> / Skills Growth</h2>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div id="all-skills-chart-period-button-group" class="btn-group">
      <button type="button" id="all-skills-chart-period-button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Week
      </button>
      <div class="dropdown-menu dropdown-menu-right">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a href="#all-skills-chart-tab1" class="nav-link text-muted" data-toggle="tab">Week</a>
          </li>
          <li class="nav-item">
            <a href="#all-skills-chart-tab2" class="nav-link text-muted" data-toggle="tab">Month</a>
          </li>
          <li class="nav-item">
            <a href="#all-skills-chart-tab3" class="nav-link text-muted" data-toggle="tab">Year</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="mr-md-5 pb-3">
<div class="tab-content">
  <div id="all-skills-chart-tab1" class="tab-pane active">
    <div class="chart-body mb-5">
			<%= line_chart data["all_skills_chart_per_week"], id: random_charkick_id, discrete: true, xtitle: "", ytitle: "Scores per Day" %>
    </div>
  </div>
  <div id="all-skills-chart-tab2" class="tab-pane">
    <div class="chart-body mb-5">
			<%= line_chart data["all_skills_chart_per_month"], id: random_charkick_id, discrete: true, xtitle: "", ytitle: "Scores per Month" %>
    </div>
  </div>
  <div id="all-skills-chart-tab3" class="tab-pane">
    <div class="chart-body mb-5">
			<%= line_chart data["all_skills_chart_per_year"], id: random_charkick_id, discrete: true, xtitle: "", ytitle: "Scores per Year" %>
    </div>
  </div>
</div>
</div>
