<div class="container-fluid">
	<div class="row">
		<%= render "shared/sidebar" %>

		<main role="main" class="col-md-9 col-lg-10 py-4 px-3 p-lg-5">
      <div id="alert-message"></div>

      <div class="modal fade" id="general-skill-modal" tabindex="-1" role="dialog" aria-labelledby="label1" aria-hidden="true"></div>

      <%= form_for(@general_skill, remote: true) do |f| %>
      <div class="form-row">
        <div class="col-md-5 input-group mb-4">
          <%= f.text_field :name, class: "form-control", placeholder: "New General Skill", maxlength: 50 %>
          <div class="input-group-append">
            <%= f.submit "Add", class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
      <% end %>

      <div class="error-message-area"></div>

      <div class="table-responsive">
      <table class="table table-hover text-nowrap">
        <thead class="thead-dark">
          <tr>
            <th scope="col" class="font-weight-normal">General Skill</th>
            <th scope="col" class="font-weight-normal">Skill数</th>
            <th scope="col" class="font-weight-normal">作成日</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody id="general-skill-list">
        <% @general_skills.each do |general_skill| %>
          <tr id="general-skill-<%= general_skill.id %>">
            <th scope="row"><%= general_skill.name %></th>
            <td><%= general_skill.skills.count %></td>
            <td><%= general_skill.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <div class="btn-group ml-3">
                <%= link_to 'Edit', edit_general_skill_path(general_skill), remote: true, class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to 'Delete', general_skill, method: :delete, remote: true, data: { confirm: 'Are you sure?'}, class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>

		</main>
	</div>
</div>
