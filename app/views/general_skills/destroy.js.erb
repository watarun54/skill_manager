$('#alert-message').empty();
$('.error-message-area').empty();
<% if @status == 'success' %>
$('#alert-message').html('\
    <div class="alert alert-success alert-dismissible fade show" role="alert" role="alert">\
      <strong>delete <%= @status %></strong>\
      <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">\
        <span aria-hidden="true">&times;</span>\
      </button>\
    </div>\
  ');
$("#general-skill-<%= @general_skill.id %>").remove();
<% elsif @status == 'fail' %>
$('#alert-message').html('\
    <div class="alert alert-danger alert-dismissible fade show" role="alert" role="alert">\
      <strong>delete <%= @status %></strong>\
      <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">\
        <span aria-hidden="true">&times;</span>\
      </button>\
    </div>\
  ');
<% end %>
