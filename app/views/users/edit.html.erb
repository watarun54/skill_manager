<div class="container-fluid">
	<div class="row">
		<%= render "shared/sidebar" %>

		<main role="main" class="col-md-9 col-lg-10 py-5">

      <div id="alert-message"></div>

      <div class="col-md-6 offset-md-3 mt-md-4">
        <h1 class="h2 mb-4 text-center">ユーザー編集</h1>

        <%= render "shared/notice" %>

        <%= render("shared/error_messages", model: @user) %>

        <%= form_for(@user) do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", maxlength: 50 %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control", disabled: true, maxlength: 191 %>
          </div>
          <div class="form-group">
            <label>Line User Id</label>
            <%= f.text_field :line_user_id, class: "form-control", maxlength: 100 %>
          </div>
          <%= f.submit '登録', class: "btn btn-secondary" %>
        <% end %>

        <div class="pl-0 mt-3">
          <%= link_to new_face_image_path, class: "text-muted", style: "text-decoration:none;" do %>
            <%= icon("fas", "angle-double-right") %> Face image を登録<%= "（登録済み）" if @current_user.face_image.present? %>
          <% end %><br />
          <%= link_to user_path(@current_user.id), method: :delete, class: "text-danger", style: "text-decoration:none;", data: { confirm: 'Are you sure?'} do %>
            <%= icon("fas", "trash") %> アカウント削除
          <% end %>
        </div>

      </div>

    </main>

  </div>
</div>
