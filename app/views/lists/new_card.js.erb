$(".add-card-btn").css("display","none");
$(".add-card-text").css("display","");
$("#ready-list").prepend("<%= j(render("new_card", card: @card)) %>");
$("#card-new textarea").focus().blur(function(){
  if($("#card-new textarea").val().trim() != ""){
    $("#card-new-submit").click();
  } else {
    $("#card-new").remove();
  }
  $(".add-card-btn").css("display","");
  $(".add-card-text").css("display","none");
});
$("#card-new textarea").keypress(function(e){
  if(e.which == 13){
    if($("#card-new textarea").val().trim() != ""){
      $("#card-new-submit").click();
    } else {
      $("#card-new").remove();
    }
    $(".add-card-btn").css("display","");
    $(".add-card-text").css("display","none");
  }
});
