<div id="card-<%= card.id.nil? ? "new" : card.id %>" class="card mb-2">
  <%= form_with(model: card, url: create_list_card_path) do |f| %>
  <div class="card-body bg-light p-3">
    <p>
      <span class="badge badge-dark">None</span>
      <span class="badge badge-success">None</span>
      <span class="badge badge-info">None</span>
    </p>
    <div class="form-group card-fact-group mb-0">
      <%= f.text_area :fact, class: "form-control" %>
    </div>
  </div>
  <%= f.submit id: "card-new-submit", style: "display:none;" %>
  <% end %>
</div>
